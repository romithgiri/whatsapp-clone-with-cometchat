<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edittext_register_login"
    android:padding="@dimen/_10sdp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/send_attachment_gallery"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/colorPurple"
        android:padding="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="1"
        app:srcCompat="@drawable/ic_gallery" />

    <TextView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="Gallery"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_attachment_gallery" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/send_attachment_camera"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/colorBlue"
        android:padding="@dimen/_15sdp"
        app:layout_constraintLeft_toRightOf="@+id/send_attachment_gallery"
        app:layout_constraintRight_toLeftOf="@+id/send_attachment_file"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="1"
        app:srcCompat="@drawable/ic_camera" />

    <TextView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="Camera"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/send_attachment_camera"
        app:layout_constraintTop_toBottomOf="@+id/send_attachment_camera" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/send_attachment_file"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/colorOrange"
        android:padding="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="1"
        app:srcCompat="@drawable/ic_file" />

    <TextView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="File"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/send_attachment_file"
        app:layout_constraintTop_toBottomOf="@+id/send_attachment_file" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/send_attachment_location"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_attachment_gallery"
        app:roundPercent="1"
        app:srcCompat="@drawable/ic_location" />

    <TextView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="Location"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/send_attachment_location"
        app:layout_constraintTop_toBottomOf="@+id/send_attachment_location" />


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/create_poll"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/colorGrey"
        android:layout_marginTop="@dimen/_40sdp"
        android:padding="@dimen/_15sdp"
        app:layout_constraintLeft_toRightOf="@+id/send_attachment_gallery"
        app:layout_constraintRight_toLeftOf="@+id/send_attachment_file"
        app:layout_constraintTop_toBottomOf="@+id/send_attachment_gallery"
        app:roundPercent="1"
        app:srcCompat="@drawable/ic_poll_white" />

    <TextView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="Poll"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/send_attachment_camera"
        app:layout_constraintTop_toBottomOf="@+id/create_poll" />

</androidx.constraintlayout.widget.ConstraintLayout>
